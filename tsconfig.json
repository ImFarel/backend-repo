{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    // "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "config/**/*.ts",
    "controllers/**/*.ts",
    "middleware/**/*.ts",
    "routes/**/*.ts",
    "index.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "files": ["./types/express.d.ts"]
}
